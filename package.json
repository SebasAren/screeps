{
  "name": "flewtje-screeps",
  "version": "0.1.0",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/SebasAren/screeps"
  },
  "author": "Sebastiaan Arendsen",
  "license": "MIT",
  "scripts": {
    "lint": "tslint -p tsconfig.json \"src/**/*.ts\"",
    "build": "rollup -c",
    "push-main": "rollup -c --environment DEST:main",
    "push-sim": "rollup -c --environment DEST:sim",
    "test": "yarn run test-unit && yarn run test-integration",
    "test-unit": "rollup -c rollup.test-unit-config.js && mocha dist/test-unit.bundle.js",
    "test-integration": "yarn run build && rollup -c rollup.test-integration-config.js && mocha dist/test-integration.bundle.js",
    "watch-main": "rollup -cw --environment DEST:main",
    "watch-pserver": "rollup -cw --environment DEST:pserver",
    "watch-sim": "rollup -cw --environment DEST:sim"
  },
  "devDependencies": {
    "@types/chai": "^4.2.3",
    "@types/lodash": "^4.14.144",
    "@types/mocha": "^5.2.7",
    "@types/node": "^12.11.1",
    "@types/screeps": "^2.5.5",
    "@types/sinon": "^7.5.0",
    "@types/sinon-chai": "^3.2.3",
    "chai": "^4.2.0",
    "dotenv": "^8.2.0",
    "lodash": "^4.17.15",
    "mocha": "^6.2.1",
    "rollup": "^1.24.0",
    "rollup-plugin-buble": "^0.19.8",
    "rollup-plugin-clear": "^2.0.7",
    "rollup-plugin-commonjs": "^10.1.0",
    "rollup-plugin-multi-entry": "^2.1.0",
    "rollup-plugin-node-resolve": "^5.2.0",
    "rollup-plugin-nodent": "^0.2.2",
    "rollup-plugin-screeps": "^0.1.2",
    "rollup-plugin-typescript2": "^0.24.3",
    "screeps-server-mockup": "^1.4.3",
    "sinon": "^7.5.0",
    "sinon-chai": "^3.3.0",
    "ts-node": "^8.4.1",
    "tslib": "^1.10.0",
    "tslint": "^5.20.0",
    "typescript": "^3.6.4"
  },
  "dependencies": {
    "source-map": "^0.7.3"
  }
}
